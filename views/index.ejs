<!-- Home Page -->
<section class="hero">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-8 mx-auto position-relative">
        <h1 class="display-4 fw-bold">Authentic Traditional Cakes</h1>
        <p class="lead">Discover the authentic taste of traditional Indonesian cakes made with love and premium ingredients. Perfect for your special occasions or daily snacking.</p>
        <a href="/products" class="btn btn-primary btn-lg">Explore Products</a>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products -->
<section class="featured-products py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-4">
        <h2>Featured Products</h2>
        <p>Our most popular traditional cakes loved by customers</p>
      </div>
    </div>
    
    <div class="row">
      <% if (featuredProducts && featuredProducts.length > 0) { %>
        <% featuredProducts.forEach(product => { %>
          <div class="col-md-3 col-sm-6 mb-4">
            <div class="product-card">
              <img src="/images/products/<%= product.image %>" alt="<%= product.name %>" onerror="this.src='/images/placeholder.jpg'">
              <div class="card-body">
                <h5><%= product.name %></h5>
                <div class="product-price">
                  Rp <%= product.price.toLocaleString('id-ID') %>
                </div>
                <a href="/products/<%= product.id %>" class="btn btn-outline w-100">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center">
          <p>No featured products available at the moment.</p>
        </div>
      <% } %>
    </div>
    
    <div class="text-center mt-3">
      <a href="/products" class="btn btn-primary">View All Products</a>
    </div>
  </div>
</section>

<!-- Categories Section -->
<section class="categories py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-4">
        <h2>Browse by Category</h2>
        <p>Find your favorite traditional treats by category</p>
      </div>
    </div>
    
    <div class="row">
      <% if (categories && categories.length > 0) { %>
        <% categories.forEach(category => { %>
          <div class="col-md-4 mb-4">
            <a href="/products?category=<%= category.id %>" class="text-decoration-none">
              <div class="card h-100">
                <div class="card-body text-center">
                  <h4><%= category.name %></h4>
                  <p class="text-muted"><%= category.description %></p>
                  <span class="btn btn-outline-primary">Browse Products</span>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center">
          <p>No categories available at the moment.</p>
        </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="feature-box">
          <i class="fas fa-cookie-bite"></i>
          <h4>Premium Ingredients</h4>
          <p>We use only the best ingredients to create authentic traditional flavors</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box">
          <i class="fas fa-truck"></i>
          <h4>Fast Delivery</h4>
