<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2">
            <%- include('./sidebar') %>
        </div>
        <div class="col-md-9 col-lg-10">
            <h1 class="h3 mb-2 text-gray-800">Category Management</h1>
            <p class="mb-4">Manage your product categories. You can add, edit, or delete categories.</p>

            <% if (message) { %>
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Categories List</h6>
                    <a href="/admin/categories/add" class="btn btn-primary btn-sm float-end" style="margin-top: -25px;">Add New Category</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(category => { %>
                                        <tr>
                                            <td><%= category.id %></td>
                                            <td><%= category.name %></td>
                                            <td><%= category.description || 'N/A' %></td>
                                            <td>
                                                <a href="/admin/categories/<%= category.id %>/edit" class="btn btn-warning btn-sm me-1">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a href="/admin/categories/<%= category.id %>/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category? This action cannot be undone.');">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No categories found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <%- include('../partials/admin-scripts') %>
            <script>
                // You can add specific JS for this page if needed, e.g., for DataTable initialization
                // $(document).ready(function() {
                //     $('#dataTable').DataTable();
                // });
            </script>
        </div>
    </div>
</div>
