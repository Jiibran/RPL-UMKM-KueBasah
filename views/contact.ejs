<!-- FAQ Section -->
<section class="faq py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-4">
        <h2>Frequently Asked Questions</h2>
        <p>Quick answers to common questions about our products and services</p>
      </div>
    </div>
    
