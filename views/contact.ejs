<!-- Contact Us Page -->
<section class="hero">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <h1>Contact Us</h1>
        <p>We'd love to hear from you. Get in touch with our team for any inquiries or orders.</p>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mb-4 mb-md-0">
        <h2 class="mb-4">Send Us a Message</h2>
        <form action="/contact/submit" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phone" name="phone">
          </div>
          <div class="mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" class="form-control" id="subject" name="subject" required>
          </div>
          <div class="mb-3">
            <label for="message" class="form-label">Your Message</label>
            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
      
      <div class="col-md-5 offset-md-1">
        <div class="contact-info p-4 bg-light rounded shadow-sm">
          <h2 class="mb-4">Contact Information</h2>
          <div class="mb-4">
            <h5><i class="fas fa-map-marker-alt me-2 text-primary"></i> Visit Us</h5>
            <p>Jl. Pasar Baru No. 123<br>Jakarta Pusat, 10710<br>Indonesia</p>
          </div>
          <div class="mb-4">
            <h5><i class="fas fa-phone me-2 text-primary"></i> Call Us</h5>
            <p>Phone: +62 812-3456-7890<br>WhatsApp: +62 812-3456-7890</p>
          </div>
          <div class="mb-4">
            <h5><i class="fas fa-envelope me-2 text-primary"></i> Email Us</h5>
            <p>info@umkmkuebasah.com<br>orders@umkmkuebasah.com</p>
          </div>
          <div class="mb-4">
            <h5><i class="fas fa-clock me-2 text-primary"></i> Business Hours</h5>
            <p>Monday - Saturday: 8:00 AM - 5:00 PM<br>Sunday: Closed</p>
          </div>
          <div class="social-icons">
            <h5>Follow Us</h5>
            <a href="#" class="me-2"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="me-2"><i class="fab fa-instagram"></i></a>
            <a href="#" class="me-2"><i class="fab fa-twitter"></i></a>
            <a href="#" class="me-2"><i class="fab fa-whatsapp"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

